%TMPL:INCLUDE{"searchbox"}%<!-- template: searchbox.pluc.tmpl -->
%TMPL:DEF{"searchbox"}%<!-- search box -->
<form name="searchbox" class="natSideBarSearch" action="%SCRIPTURLPATH{"plucsearch"}%/%BASEWEB%/%BASETOPIC%" method="post">
<input type="hidden" name="web" value="%IF{"$ 'PLUCENE_SEARCHALL' = 'on'" then="all" else="%BASEWEB%"}%" />
<input type="hidden" name="limit" value="100" />
  <table cellspacing="0" cellpadding="0" border="0">
    <tr>
      <td valign="middle">
        <input type="text" name="search" value="%TMPL:P{"searchvalue"}%" accesskey="f" onblur="if(this.value==''){this.value = '%MAKETEXT{"Search"}%'}" onfocus="if(this.value=='%TMPL:P{"searchvalue"}%'){this.value = ''}" /> 
      </td>
      <td valign="middle">
        <a href="javascript:document.searchbox.submit()"><span>Go</span></a>
      </td>
    </tr>
  </table>
</form>
<!-- //search boxx -->%TMPL:END%

