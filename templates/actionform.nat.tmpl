<div class="natEditContainer">
<form id="EditForm" name="EditForm" method="post" action="%SCRIPTURLPATH{"%SUBMITCOMMAND%"}%/%WEB%/%TOPIC%%SUBMITCMDOPT%" enctype="application/x-www-form-urlencoded">
%HIDDENFIELDS%
%EDITFIELDS%
<textarea name="text" wrap="virtual" class="foswikiTextarea" style="width:99%" rows="%EBH%" cols="%EBW%" >%TEXT%</textarea>

%BUTTON{
  "%MAKETEXT{"Save"}%" 
  type="submit"
  icon="%TMPL:P{"icon::ok::name"}%" 
  id="save" 
  accesskey="s" 
}%
%BUTTON{
  "%MAKETEXT{"Cancel"}%" 
  title="%MAKETEXT{"Abandon changes and exit"}%" 
  icon="%TMPL:P{"icon::cancel::name"}%" 
  id="cancel" 
  accesskey="c" 
  target="%SCRIPTURLPATH{"view" topic="%WEB%.%TOPIC%" unlock="on"}%"
}%
</form>
</div>
