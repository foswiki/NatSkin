<div class="natEditContainer">
<form id="EditForm" name="EditForm" method="post" action="%SCRIPTURLPATH{"%SUBMITCOMMAND%"}%/%WEB%/%TOPIC%%SUBMITCMDOPT%" enctype="application/x-www-form-urlencoded">
%HIDDENFIELDS%
<h1>Action %UID% in %WEB%.%TOPIC%</h1>
%EDITFIELDS%
<textarea name="text" wrap="virtual" style="width:99%" class="foswikiTextarea natEditTextArea natedit {autoMaxExpand:true, minHeight:215}">%TEXT%</textarea>
<div class="natEditBottomBar">
  <ul>
  <li>%BUTTON{
    "%MAKETEXT{"Save"}%" 
    type="submit"
    icon="tick" 
    id="save" 
    accesskey="s" 
  }%</li>
  <li>
  %BUTTON{
    "%MAKETEXT{"Cancel"}%" 
    title="%MAKETEXT{"Abandon changes and exit"}%" 
    icon="cross" 
    id="cancel" 
    accesskey="c" 
    target="%SCRIPTURLPATH{"view"}%/%WEB%/%TOPIC%?unlock=on"
  }%
  </li>
  </ul>
  <br class="foswikiClear" />
</div>
</form>
</div>
