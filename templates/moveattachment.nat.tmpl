%TMPL:DEF{"content_trash"}%<input type="hidden" name="newweb" value="%TRASHWEB%" />
<input type="hidden" name="newtopic" value="%URLPARAM{"newtopic" default="TrashAttachment"}%" />
<div class="foswikiFormSteps">
  <div class="foswikiFormStep">
  <h2>Are you sure?</h2>
  </div>
  <div class="foswikiFormStep foswikiFormButtons">
  %BUTTON{"%MAKETEXT{"Yes"}%" icon="%TMPL:P{"icon::ok::name"}%" type="save"}%
  %BUTTON{"%MAKETEXT{"No"}%" icon="%TMPL:P{"icon::cancel::name"}%" target="%WEB%.%TOPIC%"}%
  </div>
</div>%TMPL:END%
%TMPL:DEF{"content_move"}%<div class="foswikiFormSteps">
<div class="foswikiFormStep">
  <h4>%MAKETEXT{"To web"}%:</h4>
  <input type="text" class="foswikiInputField jqUIAutocomplete" name="newweb" id="newweb" autocomplete="%SCRIPTURL{"view" topic="%SYSTEMWEB%.JQueryAjaxHelper" section="web" contenttype="text/plain"}%" size="60" value="%IF{"defined NEW_WEB" then="%NEW_WEB%" else="%WEB%"}%" />
</div>
<div class="foswikiFormStep">
  <h4>%MAKETEXT{"To topic"}%:</h4>
  <input type="text" class="foswikiInputField jqUIAutocomplete {extraParams:{baseweb:function() {return jQuery('#neweb').val()}}}" name="newtopic" id="newtopic" autocomplete="%SCRIPTURL{"view" topic="%SYSTEMWEB%.JQueryAjaxHelper" section="topic" contenttype="text/plain" skin="text"}%" size="60" value="%TOPIC%" />
  <div class="foswikiFormDescription">
    %MAKETEXT{"The new topic chosen must already exist."}%
  </div>
</div>
%IF{"$PLUGINVERSION >= 2.1" then="$percntTMPL:P{\"toattachment\"}$percnt"}%
<div class="foswikiFormStep foswikiFormButtons">
  %BUTTON{"%MAKETEXT{"OK"}%" type="save" icon="%TMPL:P{"icon::ok::name"}%"}%
  %BUTTON{"%MAKETEXT{"Cancel"}%" target="%WEB%.%TOPIC%" icon="%TMPL:P{"icon::cancel::name"}%"}%
</div>
</div>%TMPL:END%
%TMPL:DEF{"toattachment"}%<div class="foswikiFormStep">
  <h4>%MAKETEXT{"To attachment"}%:</h4>
  <input name="newattachment" class="foswikiInputField" value="%URLPARAM{"attachment"}%" size="36" />
  <div class="foswikiFormDescription">
    %MAKETEXT{"The attachment may be renamed (by appending a number to the name) if an attachment of that name already exists in the target topic."}%
  </div>
</div>%TMPL:END%
%TMPL:DEF{"notes_trash"}%<p>
  %MAKETEXT{"When the file is deleted, it is moved to the [_1] web and attached to the [_2] topic." args="%TRASHWEB%, %TRASHWEB%.TrashAttachment"}%
</p>
<p> 
  %MAKETEXT{"The attachment and its history will be moved as well."}%
</p>%TMPL:END%
%TMPL:DEF{"notes_move"}%<p>
  %MAKETEXT{"To delete an attachment move it to the [_1] topic." args="%TRASHWEB%.TrashAttachment"}%
</p>
<p> 
  %MAKETEXT{"The attachment and its history will be moved to the new topic."}%
</p>
<p> 
  %MAKETEXT{"An error page will be shown if either of the topics are locked by another user."}%
</p>
<p> 
  %MAKETEXT{"The new topic chosen must already exist."}%
</p>%TMPL:END%
